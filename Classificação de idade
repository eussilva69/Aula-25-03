#include <stdio.h>
#include <stdlib.h>

int main() {
    int idade;

    printf("Informe a idade da pessoa: ");
    scanf("%d", &idade);

    if (idade < 18) {
        printf("Menor de idade\n");
    } else if (idade <= 64) {
        printf("Adulto\n");
    } else {
        printf("Idoso\n");
    }

    system("pause");

    return 0;
}
